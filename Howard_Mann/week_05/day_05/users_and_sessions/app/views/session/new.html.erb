<h1>Login page</h1>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email, '', required: true %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password, '', required: true %>
  </p>
  <p>
    <%= submit_tag 'Login' %>
  </p>

<% end %>
